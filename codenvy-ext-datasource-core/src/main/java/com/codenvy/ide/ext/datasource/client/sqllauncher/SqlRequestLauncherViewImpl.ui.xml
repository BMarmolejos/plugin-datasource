<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style type="com.codenvy.ide.ext.datasource.client.sqllauncher.SqlRequestLauncherViewImpl.Style">
        .resultZone {
            background-color: white;
            font-family: monospace;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" ui:field="launcherContainer">
        <g:north size="25">
            <g:HorizontalPanel>
                <!-- use some kind of toolbar ? -->
                <g:Label ui:field="selectDatasourceLabel" />
                <g:ListBox ui:field="datasourceList" />
                <g:Label ui:field="resultLimitLabel" />
                <g:TextBox ui:field="resultLimitInput" />
                <g:Button ui:field="executeButton" />
            </g:HorizontalPanel>
        </g:north>
        <g:center>
            <g:SplitLayoutPanel>
                <g:center>
                    <g:SimpleLayoutPanel ui:field="editorZone" />
                </g:center>
                <g:south size="200">
                    <g:ScrollPanel height="100%" width="100%">
                        <g:TextArea ui:field="resultZone" readOnly="true" addStyleNames="style.resultZone" />
                    </g:ScrollPanel>
                </g:south>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>