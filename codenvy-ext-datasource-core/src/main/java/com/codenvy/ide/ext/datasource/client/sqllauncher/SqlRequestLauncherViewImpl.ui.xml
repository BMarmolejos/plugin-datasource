<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>
            @eval mainFontColor com.codenvy.ide.api.ui.theme.Style.getMainFontColor();
            @eval partBackground com.codenvy.ide.api.ui.theme.Style.getPartBackground();
            @eval activeTabBackground com.codenvy.ide.api.ui.theme.Style.getActiveTabBackground();
            .listBox {
            	color: mainFontColor;
            	background-color: partBackground;
            	border: tabBorder;
            	border-radius: 2px;
            	font-size: fontSize;
            	font-weight: bold;
            	height: 25px;
            	margin: 2px;
            	margin-top: 5px;
            	margin-bottom: 5px;
            	padding-left: 7px;
            	padding-right: 7px;
            }
            
            .textBox {
            	height: 25px;
            	margin: 2px;
            	margin-top: 5px;
            	margin-bottom: 5px;
            	text-align: right;
            }
            
            .executeButton {
            	color: white;
            	background-image: none !important;
            	background-color: #2d6ba3;
            	font-size: fontSize;
            	font-weight: bold;
            	padding-left: 12px;
            	padding-right: 12px;
            	height: 25px;
            	margin: 5px;
            }
            
            .label {
            	height: 20px;
            	margin-right: 4px;
            	margin-left: 25px;
            	margin-top: 10px;
            	margin-bottom: 5px;
            }
        </ui:style>
    <g:DockLayoutPanel unit="PX" ui:field="launcherContainer">
        <g:north size="35">
            <g:HorizontalPanel>
                <!-- use some kind of toolbar ? -->
                <g:Button ui:field="executeButton" addStyleNames="{style.executeButton}"/>
                <g:Label ui:field="selectDatasourceLabel" addStyleNames="{style.label}"/>
                <g:ListBox ui:field="datasourceList" width="9em" addStyleNames="{style.listBox}" />
                <g:Label ui:field="resultLimitLabel" addStyleNames="{style.label}"/>
                <g:TextBox ui:field="resultLimitInput" width="4em" addStyleNames="{style.textBox}"/>
                <g:Label ui:field="executionModeLabel" addStyleNames="{style.label}"/>
                <g:ListBox ui:field="executionModeList" width="8em" addStyleNames="{style.listBox}" />
            </g:HorizontalPanel>
        </g:north>
        <g:center>
            <g:SplitLayoutPanel>
                <g:center>
                    <g:SimpleLayoutPanel ui:field="editorZone" />
                </g:center>
                <g:south size="200">
                    <g:ScrollPanel>
                        <g:FlowPanel ui:field="resultZone" />
                    </g:ScrollPanel>
                </g:south>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>