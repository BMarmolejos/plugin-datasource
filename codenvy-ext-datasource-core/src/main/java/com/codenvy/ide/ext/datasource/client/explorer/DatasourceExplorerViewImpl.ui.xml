<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.codenvy.ide.ui.tree'>
    <ui:style>
        .refreshButton {
        	width: 16px;
        	height: 16px;
        	margin: 5px;
        	margin-right: 0px
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" ui:field="mainContainer">
        <g:north size="25">
            <g:DockLayoutPanel unit="PX">
                <g:west size="120">
                    <g:ListBox ui:field="datasourceListBox" />
                </g:west>
                <g:center>
                    <g:PushButton ui:field="refreshButton" addStyleNames="{style.refreshButton}" />
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <g:SplitLayoutPanel>
                <g:south size="200">
                    <g:SimpleLayoutPanel ui:field="propertiesContainer" />
                </g:south>
                <g:center>
                    <my:Tree ui:field="tree" />
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>