<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>

    <ui:with field='messages' type='com.codenvy.ide.ext.datasource.client.editdatasource.EditDatasourceMessages'/>

    <g:DockLayoutPanel unit="EM">
        <g:east size="10">
            <g:FlowPanel>
                <g:Button ui:field="editButton" text="{messages.editButtonText}" />
                <g:Button ui:field="deleteButton" text="{messages.deleteButtonText}" />
            </g:FlowPanel>
        </g:east>
        <g:south size="2">
            <g:Button ui:field="closeButton" text="{messages.closeButtonText}" />
        </g:south>
        <g:center>
            <c:CellList ui:field="datasourceList" />
        </g:center>
    
    </g:DockLayoutPanel>
</ui:UiBinder>