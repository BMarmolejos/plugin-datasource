<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='res' type='com.codenvy.ide.Resources' />
    <ui:with field='resource' type='com.codenvy.ide.ext.datasource.client.DatasourceUiResources' />
    <ui:style>
        .spacing {
        	margin-bottom: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:center size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
                <g:west size="90.0">
                    <g:Label text="Database" height="18px" addStyleNames="{res.coreCss.mainBoldFont}" />
                </g:west>
                <g:center>
                    <g:TextBox ui:field="dbName" width="97%" height="16px" />
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
        <g:center size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
                <g:west size="90.0">
                    <g:Label text="Host" height="18px" addStyleNames="{res.coreCss.mainBoldFont}" />
                </g:west>
                <g:center>
                    <g:TextBox ui:field="hostField" width="97%" height="16px" />
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
        <g:center size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
                <g:west size="90.0">
                    <g:Label text="Port" height="18px" addStyleNames="{res.coreCss.mainBoldFont}" />
                </g:west>
                <g:center>
                    <g:TextBox ui:field="portField" width="97%" height="16px" />
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
        <g:center size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
                <g:west size="90.0">
                    <g:Label text="Username" height="18px" addStyleNames="{res.coreCss.mainBoldFont}" />
                </g:west>
                <g:center>
                    <g:TextBox ui:field="usernameField" width="97%" height="16px" />
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
        <g:center size="30.0">
        <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
            <g:west size="90.0">
                <g:Label text="Password" height="18px" addStyleNames="{res.coreCss.mainBoldFont}" />
            </g:west>
            <g:center>
                <g:PasswordTextBox ui:field="passwordField" width="97%" height="16px" />
            </g:center>
        </g:DockLayoutPanel>
        </g:center>
        <g:center size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
                <g:center>
                    <g:CheckBox ui:field="useSSL" text="Use SSL"></g:CheckBox>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
        <g:center size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
                <g:center>
                    <g:CheckBox ui:field="verifyServerCertificate" text="Verify Server Certificate"></g:CheckBox>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
        <g:east size="30.0">
            <g:DockLayoutPanel unit="PX" >
                <g:east size="140" >
                    <g:Button ui:field="testConnectionButton" width="135" text="Test Connection" />
                </g:east>
            </g:DockLayoutPanel>
        </g:east>
        <g:west size="30.0">
            <g:DockLayoutPanel unit="PX" >
                <g:west size="140" >
                    <g:Image ui:field="chooseTechnologyTooltip" resource="{resource.getPostgreSqlLogo}"/>
                </g:west>
            </g:DockLayoutPanel>
        </g:west>
        <g:center size="35.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
                <g:center>
                    <g:FlowPanel >
                        <g:Label title="storageType" > Where would you like to store this database configuration ? </g:Label>
                        <g:ListBox ui:field="projectList" title="Choose a type of storage" width="9em" enabled="false" />
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>

    </g:DockLayoutPanel>
</ui:UiBinder>